{
  "name": "minicli/minicli",
  "type": "library",
  "description": "Experimental micro CLI framework for PHP",
  "license": "MIT",
  "homepage": "https://github.com/minicli/minicli",
  "keywords": ["cli","command-line"],
  "autoload": {
    "psr-4": {
      "Minicli\\": "src/",
      "Assets\\": "tests/Assets"
    }
  },
  "prefer-stable": true,
  "minimum-stability": "dev",
  "require": {
    "php": ">=7.3",
    "ext-readline": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "pestphp/pest": "^1.0",
    "friendsofphp/php-cs-fixer": "^2.16"
  }
}
